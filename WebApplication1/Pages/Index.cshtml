@page
@model IndexModel

<style>
    h1 {
        text-align: center;
        border-bottom: 1px solid black;
        padding-bottom: 10px;
    }

    form {
        max-width: 500px;
        margin: auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 20px;
        border: 1px solid black;
        border-radius: 5px;
    }

    label {
        margin-bottom: 10px;
    }

    input[type="text"],
    input[type="number"] {
        padding: 5px;
        border-radius: 5px;
        border: 1px solid gray;
        width: 100%;
        margin-bottom: 10px;
    }

    button[type="submit"] {
        background-color: blue;
        color: white;
        border-radius: 5px;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
    }
</style>

<h1>Lata przestępne</h1>

<form method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>
        <label asp-for="Person.FirstName" class="control-label">Imię:</label>
        <input asp-for="Person.FirstName" class="form-control" />

    </div>
    <div>
        <label5 asp-for="Person.YearOfBirth" class="control-label">Rok urodzenia:</label5>
        <input asp-for="Person.YearOfBirth" class="form-control" />
        <span asp-validation-for="Person.YearOfBirth" class="text-danger"></span>
    </div>
    <button type="submit">Zapisz</button>
    @if (Model.IsSaved)
    {
        <div class="alert alert-success" role="alert">
            Dane zostały pomyślnie zapisane.
        </div>
    }
    <div class="text-center">
        @if (Model.Records != null)
        {
            <p>
                Liczba osób urodzonych w roku przestępnym: @Model.Records.Count(). Są to:
            </p>
            @foreach (var item in Model.Records)
            {
                <p>@item.FirstName @item.YearOfBirth</p>
            }
        }
        else
        {
            <p>Brak dostępnych rekordów.</p>
        }
    </div>

</form>





